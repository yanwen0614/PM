<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PM.View"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="PM.View.lblcol"
      mc:Ignorable="d" 
      
      Title="lblcol" MinWidth="700" MinHeight="600" Unloaded="Page_Unloaded">

    <Grid >
        <Grid x:Name="L" Visibility="Visible">
            <Grid Height="60" Margin="40,30,35,0" VerticalAlignment="Top">
                <Button x:Name="StartCrawl" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Width="75" Click="Button_Click" Content="开始" Height="30"/>
                <!--<TextBox x:Name="interval_sec1" HorizontalAlignment="Left" Height="25" Margin="59,17,0,17" TextWrapping="Wrap" Text="2" VerticalAlignment="Center" Width="30" TextChanged="TextBox_TextChanged"/>-->
                <Rectangle Height="29" Margin="0,14,13,0" VerticalAlignment="Top" Fill="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" MouseDown="Rectangle_MouseDown" HorizontalAlignment="Right" Width="32">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" TileMode="FlipXY">
                            <VisualBrush.Visual>
                                <Canvas Clip="F1M0,0L76,0 76,76 0,76 0,0" Height="76" UseLayoutRounding="True" Width="76" d:DesignUseLayoutRounding="True">
